{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022"],
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2022",
    "types": ["node"],
    "paths": { "~/*": ["src/*"] }
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["*.ts", "lib/**/*.ts", "src/**/*.ts", "bin/*.ts", "test/**/*.ts", "examples/example.ts"],
  "exclude": ["node_modules", "build", "public", "dist", "tmp", "temp"]
}
